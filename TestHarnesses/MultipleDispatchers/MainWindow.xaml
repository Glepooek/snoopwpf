<Window
	x:Class="MultipleDispatchers.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="MainWindow"
	Width="525"
	Height="350"
>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height=".5*"/>
			<RowDefinition Height=".5*"/>
		</Grid.RowDefinitions>
		<Button
			Grid.Row="0"
			Content="Launch New Window (on a new Dispatcher)"
			Width="300"
			Height="50"
			Click="DispatcherLaunchButton_Click"
		/>
		<Button
			Grid.Row="1"
			Content="Launch New Window (on current Dispatcher)"
			Width="300"
			Height="50"
			Click="NoDispatcherLaunchButton_Click"
		/>
	</Grid>
</Window>
